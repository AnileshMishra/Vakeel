package com.vakeel.master.modal;

import java.sql.Timestamp;
import java.util.Objects;

import jakarta.persistence.Basic;
import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;
import jakarta.validation.constraints.NotNull;

@Entity
@Table(name = "vm_state", schema = "master")
public class StateMaster {

	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	@Basic(optional = false)
	@Column(name = "id", nullable = false)
	private Long id;

	@NotNull(message = "stateName can not null or blank!!")
	@Column(name = "state_name")
	private String stateName;

	@NotNull(message = "stateCode can not null or blank!!")
	@Column(name = "state_code")
	private String stateCode;

	@Column(name = "created_date")
	private Timestamp createdDate;

	@Column(name = "is_deleted")
	private boolean isDeleted;

	@Column(name = "deleted_date")
	private Timestamp deletedDate;

	public Long getId() {
		return id;
	}

	public void setId(Long id) {
		this.id = id;
	}

	public String getStateName() {
		return stateName;
	}

	public void setStateName(String stateName) {
		this.stateName = stateName;
	}

	public String getStateCode() {
		return stateCode;
	}

	public void setStateCode(String stateCode) {
		this.stateCode = stateCode;
	}

	public Timestamp getCreatedDate() {
		return createdDate;
	}

	public void setCreatedDate(Timestamp createdDate) {
		this.createdDate = createdDate;
	}

	public StateMaster(Long id, @NotNull(message = "stateName can not null or blank!!") String stateName,
			@NotNull(message = "stateCode can not null or blank!!") String stateCode, Timestamp createdDate,
			boolean isDeleted, Timestamp deletedDate) {
		super();
		this.id = id;
		this.stateName = stateName;
		this.stateCode = stateCode;
		this.createdDate = createdDate;
		this.isDeleted = isDeleted;
		this.deletedDate = deletedDate;
	}

	public boolean isDeleted() {
		return isDeleted;
	}

	public void setDeleted(boolean isDeleted) {
		this.isDeleted = isDeleted;
	}

	public Timestamp getDeletedDate() {
		return deletedDate;
	}

	public void setDeletedDate(Timestamp deletedDate) {
		this.deletedDate = deletedDate;
	}

	@Override
	public String toString() {
		return "StateMaster [id=" + id + ", stateName=" + stateName + ", stateCode=" + stateCode + ", createdDate="
				+ createdDate + ", isDeleted=" + isDeleted + ", deletedDate=" + deletedDate + "]";
	}

	@Override
	public int hashCode() {
		return Objects.hash(createdDate, deletedDate, id, isDeleted, stateCode, stateName);
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		StateMaster other = (StateMaster) obj;
		return Objects.equals(createdDate, other.createdDate) && Objects.equals(deletedDate, other.deletedDate)
				&& Objects.equals(id, other.id) && isDeleted == other.isDeleted
				&& Objects.equals(stateCode, other.stateCode) && Objects.equals(stateName, other.stateName);
	}

	
}
